<!DOCTYPE html>
<html>
<html lang="es">

<head>
  <%- include('../../../shared/interface/components/head') %>
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Pedilo Ya</title>
  <style>
    main {
      margin-top: 5rem;
      margin-bottom: 5rem;
    }

    .dish-card {
      height: 300px;
      overflow: hidden;
    }

    .dish-image {
      height: 100%;
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }

    .dish-image:hover {
      transform: scale(1.5);
    }

    .card-header button {
      font-size: 18px;
      text-align: left;
      width: 100%;
      padding: 0;
      color: #333;
    }

    .card-header button:hover {
      text-decoration: none;
      color: #555;
    }

    .card-body h5 {
      margin-top: 0;
      margin-bottom: 10px;
    }

    .card-body p {
      margin-bottom: 5px;
    }

    .card-body a {
      margin-top: 10px;
    }

    .carousel-item img {
      max-height: 500px;
    }

    section {
      margin-top: 5rem;
      margin-bottom: 5rem;
    }
  </style>
</head>

<body>
  <%- include('../components/userNav') %>
  <main class="container-fluid">
    <section>
      <%- include('../components/dinersMainList',{diners:data.diners}) %>
    </section>
    <section>
      <%- include('../components/acordionCanteens',{canteens:data.canteens}) %>
    </section>
    <section>
      <%- include('../components/collageDishes',{featuredDishes:data.featuredDishes}) %>
    </section>
  </main>
  <%- include('../../../shared/interface/components/footer') %>
</body>

</html>