              </ul>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div id="modalItem" class="modal">
        <div class="modal-content">
          <h2 id="itemTitle"></h2>
          <textarea id="itemInfo" class="form-control" rows="4" placeholder="Ingrese información del item"></textarea>
          <div class="modal-buttons">
            <button type="button" class="btn btn-primary" onclick="saveItemInfo()">Guardar</button>
            <button type="button" class="btn btn-secondary" onclick="closeItemModal()">Cerrar</button>
          </div>
        </div>
      </div>

      <script>
        var selectedItem = null;
        var selectedInfo = null;
    
        function showItemModal(itemName, itemInfo) {
          selectedItem = itemName;
          selectedInfo = itemInfo;
          document.getElementById("itemTitle").innerText = itemName;
          document.getElementById("itemInfo").value = itemInfo;
          document.getElementById("modalItem").style.display = "block";
        }
    
        function saveItemInfo() {
          var itemInfo = document.getElementById("itemInfo").value;
          // Aquí puedes realizar la acción que desees con la información del item seleccionado
          // Por ejemplo, puedes enviarla al servidor o realizar alguna operación en JavaScript
          console.log("Item seleccionado:", selectedItem);
          console.log("Información del item:", itemInfo);
          closeItemModal();
        }
    
        function closeItemModal() {
          document.getElementById("modalItem").style.display = "none";
        }
    
        function deleteItem(event) {
          event.stopPropagation(); // Detener la propagación del evento click para evitar que se abra el modal
          var listItem = event.target.parentNode;
          listItem.parentNode.removeChild(listItem);
        }
      </script>

     